{
  "name": "reactnative-gallery",
  "description": "Visualize React Native apps at a glance",
  "keywords": ["react-native", "react native example", "gallery"],
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ReactNativeGallery/reactnative-gallery-web"
  },
  "author":
    "Xavier Carpentier <contact@xaviercarpentier.com> (http://xaviercarpentier.com/)",
  "license": "MIT",
  "website": "https://reactnative.gallery",
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "test": "./node_modules/jest/bin/jest.js",
    "check-deps": "ncu -p -e 2",
    "check-security": "nsp check --reporter summary",
    "check-duplicate": "jsinspect --ignore '.next'",
    "dev": "node server/index.js",
    "precommit": "lint-staged && yarn test",
    "build": "next build",
    "start": "NODE_ENV=production node server/index.js",
    "heroku-postbuild": "next build"
  },
  "dependencies": {
    "auth0-lock": "11.7.2",
    "axios": "0.18.0",
    "babel-plugin-styled-components": "1.5.1",
    "babel-plugin-transform-define-file": "1.3.2",
    "body-parser": "1.18.3",
    "chalk": "2.4.1",
    "cookie-parser": "1.4.3",
    "csurf": "1.9.0",
    "dotenv": "6.0.0",
    "elasticsearch": "15.1.1",
    "express": "4.17.3",
    "helmet": "3.12.1",
    "history": "4.7.2",
    "hoist-non-react-statics": "2.5.5",
    "invariant": "2.2.4",
    "isomorphic-fetch": "2.2.1",
    "js-cookie": "2.2.0",
    "jwt-decode": "2.2.0",
    "lru-cache": "4.1.3",
    "newrelic": "4.3.0",
    "next": "6.1.1",
    "normalize.css": "8.0.0",
    "path-match": "1.2.4",
    "prop-types": "15.6.2",
    "ramda": "0.25.0",
    "raw-loader": "0.5.1",
    "rc-progress": "2.2.5",
    "react": "16.4.1",
    "react-animations": "1.0.0",
    "react-dom": "16.4.2",
    "react-feather": "1.1.1",
    "styled-components": "3.3.3",
    "styled-css-grid": "0.11.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.46",
    "babel-cli": "7.0.0-beta.3",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.3",
    "babel-preset-env": "7.0.0-beta.3",
    "babel-preset-react": "7.0.0-beta.3",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "0.14.3",
    "jest": "22.4.2",
    "lint-staged": "7.2.0",
    "plop": "2.0.0",
    "prettier": "1.12.1",
    "react-test-renderer": "16.4.0",
    "regenerator-runtime": "0.11.1"
  },
  "lint-staged": {
    "**/*.js": ["yarn lint --fix", "git add"]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": ["./testSetup.js"]
  }
}
